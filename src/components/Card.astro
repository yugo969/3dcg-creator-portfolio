---
interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<div class="image-container">
			<img src={image} alt={title} />
			<div class="glitch-overlay"></div>
		</div>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #000;
		border: 1px solid #333;
		border-radius: 7px;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1.5rem;
		border-radius: 8px;
		color: white;
		background-color: #000;
	}
	.image-container {
		position: relative;
		width: 100%;
		height: 200px;
		overflow: hidden;
		margin-bottom: 1rem;
	}
	.image-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}
	.glitch-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(45deg, transparent 50%, rgba(255,255,255,0.1) 100%);
		opacity: 0;
		transition: opacity 0.3s ease;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		color: white;
		position: relative;
	}
	h2 span {
		position: absolute;
		right: 0;
		opacity: 0;
		transition: opacity 0.3s ease;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #aaa;
	}
	.link-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 5px 15px rgba(255,255,255,0.1);
	}
	.link-card:hover .image-container img {
		transform: scale(1.1);
	}
	.link-card:hover .glitch-overlay {
		opacity: 1;
	}
	.link-card:hover h2 span {
		opacity: 1;
	}
</style>
